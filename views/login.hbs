<form id="login" method="POST">
    <input type="email" id="email" name="email" value="jeastman19@gmail.com" placeholder="Tu Email">
    <br><br>
    <input type="password" id="password" name="password" value="1234" placeholder="Tu contraseÃ±a">
    <br><br>
    <input type="submit" value="Login">
</form>

<script type="text/javascript">
    var formLogin = document.querySelector("#login");

    formLogin.addEventListener('submit', event => {
        event.preventDefault()

        fetch(
            '/api/signin',
            {
                method: 'POST',
                body: JSON.stringify(new FormData(formLogin)),
                headers: {
                    'Content-Type': 'application/json'
                }
            }
        )
        .then(res => res.json())
        .catch(error => console.log('Error: ', error))
        .then(data => localStorage.setItem('token', data.token))
    })
        

</script>
